    <script type="text/javascript">
        $(document).ready(function () {
            $('#link12').click(function () {
                var CancelDate1 = $('#CancelDate1').val();
                var CancelDate2 = $('#CancelDate2').val();
                var Category = $('#Category').val();
                //$.getJSON("/UserBooking/Available", function (data) {//"/UserBooking/Available?Category="+Category, function (data) { //CancelDate1=" + CancelDate1  "&CancelDate2=" + CancelDate2 + "&Category=" + Category, function (data) {
                $.getJSON("../UserBooking/Available?Category=" + Category +"&CancelDate1="+CancelDate1 +"&CancelDate2="+CancelDate2, function (data) {
                    if (data > 0) {
                        $('#Result').val("Room is available");
                    }
                    else {
                        $('#Result').val("Room is not available");
                    }
                });
                                     
            });
        })
