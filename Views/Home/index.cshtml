
@model Special.Models.User

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <title>Five Star Hotel</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/layout.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/maxheight.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
   
</head>
<body id="page1" onload="new ElementMaxHeight();">
    @{
        Layout = null;
    }
    <div id="main">
        <!-- header -->
        <div id="header">
            <div class="row-1">
                <div class="wrapper">
                    <div class="logo">
                        <h1><a href="#">Five Star</a></h1>
                        <em>Hotel</em> <strong>True Luxury</strong>
                    </div>
                    <div class="phones">
                        1-800-412-45-56<br />
                        1-800-542-64-48
                    </div>
                </div>
            </div>
            <div class="row-2">
                <div class="indent">
                    <!-- header-box begin -->
                    <div class="header-box">
                        <div class="inner">
                            <ul class="nav">
                                @*   <li><a href="index.html" class="current">Home page</a></li>
              <li><a href="services.html">Services</a></li>
              <li><a href="gallery.html">Gallery</a></li>
              <li><a href="restaurant.html">Restaurant</a></li>
              <li><a href="testimonials.html">Testimonials</a></li>
              <li><a href="booking.html">Booking</a></li>*@
                            </ul>
                        </div>
                    </div>
                    <!-- header-box end -->
                </div>
            </div>
        </div>
        <!-- content -->
        @{
            List<SelectListItem> temp = new List<SelectListItem>();

            temp.Add(new SelectListItem { Text = "Admin", Value = "1" });
            temp.Add(new SelectListItem { Text = "User", Value = "2" });
                  
                      
                    
        }
        <div id="content">
            <div class="wrapper">
                <div class="aside maxheight">
                    <!-- box begin -->
                    <div class="box maxheight">
                        <div class="inner">
                            <h3>Login:</h3>
                            @using (Html.BeginForm("login", "Home", "post"))
                            {
                                @Html.LabelFor(model => model.Name)
                                @Html.TextBoxFor(model => model.Name)
                                @Html.ValidationMessageFor(model => model.Name)
                                @Html.LabelFor(model => model.Password)
                                @Html.PasswordFor(model => model.Password)
                                @Html.ValidationMessageFor(model => model.Name)
                                @Html.DropDownList("category", temp);
                                <div class="button3"><span><span style="color: red">
                                    <input type="submit" value="           Login         " style="background-color: #c30000" /></span></span></div>
                            }
                            
                        </div>
                    </div>
                    <!-- box end -->
                </div>
                <div class="content">
                    <div class="indent">
                        <table>
                        <h2>Sign Up :</h2>
                         @using (Html.BeginForm("Signup", "Home", "post"))
                            {
                         
                             <tr><td>@Html.LabelFor(model => model.Name)</td>
                              <td>  @Html.TextBoxFor(model => model.Name, new { id="tempName"})</td>
                                     @Html.ValidationMessageFor(model => model.Name)
                                 <td>@Html.TextBox("Result")</td>
                                 <td> <div class="button3"><span><span  style="color:red"><input type="button" id="link" value="           Check         " style="background-color:#c30000"/></span></span></div></td>
                             </tr>
                             
                             <tr>  <td> @Html.LabelFor(model => model.Password)</td>
                              <td>  @Html.PasswordFor(model => model.Password)</td></tr>
                                 @Html.ValidationMessageFor(model => model.Password)
                              <tr><td>  @Html.LabelFor(model=>model.Email)</td>
                               <td> @Html.TextBoxFor(model=>model.Email)</td></tr>
                                 @Html.ValidationMessageFor(model => model.Email)
                             <tr><td>  @Html.LabelFor(model=>model.address)</td>
                               <td> @Html.TextBoxFor(model=>model.address)</td></tr>
                                 @Html.ValidationMessageFor(model => model.address)
                             <tr>  <td> @Html.LabelFor(model=>model.Cnic)
                               <td> @Html.TextBoxFor(model=>model.Cnic) </td></tr> 
                                 @Html.ValidationMessageFor(model => model.Cnic)
                               <tr><td> @Html.LabelFor(model=>model.Dob)</td>
                               <td> @Html.TextBoxFor(model=>model.Dob)</td></tr>
                                 @Html.ValidationMessageFor(model => model.Dob)
                               <tr><td> </td><td><div class="button3"><span><span style="color: red">
                                <input type="submit" value="              Signup            " style="background-color: #c30000" /></span></span></div></td></tr>
                            }
                             </table>
                                   </div>

             

                        <script type="text/javascript">

                            $(document).ready(function () {

                                $('#link').click(function () {

                                    var userName = $('#tempName').val();

                                    $.getJSON("/Home/CheckUserName?Name=" + userName, function (data) {

                                        if (data == false) {
                                            $('#Result').val("User does not exist in database");

                                        }
                                        else {
                                            $('#Result').val("User  exists in database");
                                        }
                                    });

                                });

                            });
                        </script>

                        <div class="clear"></div>
                        <div class="line-hor"></div>
                        <div class="wrapper line-ver">
                           
                        </div>
           </div>
        <!-- footer -->
        <div id="footer">
            <ul class="nav">
               
            </ul>
            <div class="wrapper">
                <div class="fleft">Copyright &copy; 2009 <a href="#">Name Here</a>. All Rights Reserved</div>
            </div>
        </div>
                         
                         
</body>
</html>
